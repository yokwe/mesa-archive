-- file LongAllocOps.mesa - Last modified by--   BXM  	20-Aug-81 11:36:33--   RES  	14-Oct-81 13:12:27--   CXH   	21-Apr-83 11:48:39--   BTL  	 9-May-83 17:12:34DIRECTORY  LongAlloc USING [Base, Notifier, Selector],  Space USING [Interval];  LongAllocOps: DEFINITIONS =  BEGIN OPEN LongAlloc;  SizeSeq: TYPE = RECORD [SEQUENCE COMPUTED    CARDINAL [0..LAST[INTEGER]/SIZE[LONG CARDINAL]) OF LONG CARDINAL];  SpaceSeq: TYPE = RECORD [SEQUENCE COMPUTED    CARDINAL [0..LAST[INTEGER]/SIZE[Space.Interval]) OF Space.Interval];  ChunkSeq: TYPE = RECORD [SEQUENCE COMPUTED    CARDINAL [0..LAST[INTEGER]/SIZE[ChunkHandle]) OF ChunkHandle];  BaseSeq: TYPE = RECORD [SEQUENCE COMPUTED    CARDINAL [0..LAST[INTEGER]/SIZE[Base]) OF Base];      SizesHandle: TYPE = LONG POINTER TO SizeSeq;   SpacesHandle: TYPE = LONG POINTER TO SpaceSeq;   ChunksHandle: TYPE = LONG POINTER TO ChunkSeq;   BasesHandle: TYPE = LONG POINTER TO BaseSeq;   Chunk: TYPE = MACHINE DEPENDENT RECORD [    free(0:0..0): BOOLEAN,    size(0:1..15): [0..77777B],    fLink(1): CIndex,    bLink(3): CIndex];  CIndex: TYPE = Base RELATIVE LONG POINTER --[0..Limit)-- TO Chunk;  NullChunkIndex: CIndex = LOOPHOLE[LONG[0]];    ChunkHandle: TYPE = LONG POINTER TO ChunkObject;  ChunkObject: TYPE = RECORD [    chunkRover: CIndex,    firstSmall: CARDINAL,    smallLists: SEQUENCE nSmall: CARDINAL OF CIndex];    Handle: TYPE = LONG POINTER TO InstanceData;    InstanceData: TYPE = MONITORED RECORD [    nTables: CARDINAL,    z: UNCOUNTED ZONE,    tileSize: CARDINAL,    notifiers: NotifyChainHandle _ NIL,    base: BasesHandle,    spaces: SpacesHandle,    chunks: ChunksHandle,    top: SizesHandle,    limit: SizesHandle,    vmPages: SizesHandle,    clientData: LONG POINTER];    NotifyChainHandle: TYPE = LONG POINTER TO NotifyNode;  NotifyNode: TYPE = RECORD [    notifier: LongAlloc.Notifier, link: NotifyChainHandle];  GrowTable: PROC [h: Handle, table: Selector, newTop: LONG CARDINAL];  END.