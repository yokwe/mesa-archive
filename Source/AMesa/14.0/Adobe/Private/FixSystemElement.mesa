     --change version number      msg.length ¬ 0;      String.AppendString[msg, "Resetting location of ARs for "L];      String.AppendString[msg, arSH.name];      NSExec.PutMessage[exec, S[msg]];      --arSH.version ¬ arSH.version + 1;      --AdobeServerOps.PutVersionIDInternal[arSH.name, arSH.version];      AdobeServerOps.FreeSystemDescriptionInternal[arSH, data.z];      NSFile.Close[remoteDirectory, data.fileSession];      ENDLOOP;    NSExec.PutMessage[exec, S["Flushing service cache."L]];    NSFilingGlobal.FlushServiceCache[];    NSExec.PutMessage[exec, S["Done."L]];      };    Init: PROCEDURE = {   NSExec.AddExecCommand[     command:[name: S["FixSystemElement"L], proc:FixIt]]};      --main line code  Init[];  END. -- of FixSystemElement 