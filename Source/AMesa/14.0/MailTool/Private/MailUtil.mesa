-- MailUtil.mesa-- various utilities for heap management, unloading-- BGY	22-Mar-86 13:22:49DIRECTORY  MailAttributes; MailUtil: DEFINITIONS = {    zone: UNCOUNTED ZONE;    UnloadProc: TYPE = PROCEDURE[clientData: LONG POINTER];  RegisterUnloadProc: PROCEDURE [proc: UnloadProc, clientData: LONG POINTER];  UnregisterUnloadProc: PROCEDURE [proc: UnloadProc, clientData: LONG POINTER];    Unload: PROCEDURE;    CopyEnvelope: PROCEDURE[old: MailAttributes.Envelope]     RETURNS [new: MailAttributes.Envelope];      FreeEnvelope: PROCEDURE[envelope: MailAttributes.Envelope];    unloading: BOOLEAN;    }.      