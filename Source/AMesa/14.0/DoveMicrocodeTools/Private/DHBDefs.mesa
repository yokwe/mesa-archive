20): MachineTypeType ¬ Daisy,    address(21): LONG STRING ¬ NIL,    nIA(23): LONG STRING ¬ NIL,    iOPwildCard(25): LONG STRING ¬ NIL,    cSwildCard(27): LONG STRING ¬ NIL,    noofWaitCycles(29): LONG STRING ¬ NIL,    halt(31): LONG STRING ¬ NIL,    arbitor(33): LONG STRING ¬ NIL,    multiTRG(35): LONG STRING ¬ NIL,    postTrigSampleX(37): LONG STRING ¬ NIL];  SampleTypeType: TYPE = {IOP, CS};  BaseType: TYPE = {Binary, Hex};  MachineTypeType: TYPE = {DayBreak, Daisy};    FormItems: TYPE = {sample, reset, PrintBuffer, loadLog, loadSettings, sampleType, from, saveLog, saveSettings, outputBase, to, clearLog, help, file, iOPTRIGGERPARAMETERS, cSTRIGGERPARAMETERS, data, bank, status, machineType, address, nIA, iOPwildCard, cSwildCard, noofWaitCycles, halt, arbitor, multiTRG, postTrigSampleX};        <<     =========================================================================	     GLOBAL VARIABLES     =========================================================================>>d: DHBDefs.Data;<<     =========================================================================     Zones     =========================================================================>>z: UNCOUNTED ZONE;<<     =========================================================================     SIGNALS AND ERRORS     =========================================================================>>   <<     =========================================================================     PROCEDURES     =========================================================================>><<     =========================================================================     Input/Output Routines     =========================================================================>><<     =========================================================================     Misc. Routines     =========================================================================>><<     =========================================================================     Main Routines (these rouines are called from form subwindow of tool)     =========================================================================>>   SampleMain: PROC[d: DataHandle];DisplayMain: PROC[d: DataHandle];LoadLogMain: PROC[d: DataHandle];SaveLogMain: PROC[d: DataHandle];LoadSettingsMain: PROC[d: DataHandle] RETURNS[succeeded: BOOLEAN];SaveSettingsMain: PROC[d: DataHandle] RETURNS[succeeded: BOOLEAN];ResetHistoryBuffer: PROC[];<<     =========================================================================     These procedures can be called remotely (i.e. from IOPBermuda)     =========================================================================>>SetFileNameField: PROC[fileName: LONG STRING];WriteCommentToLogFile: PROC[comment: LONG STRING];Sample: FormSW.ProcType;Reset: FormSW.ProcType;DisplayRemote: PROC[];LoadLog: FormSW.ProcType;SaveLog: FormSW.ProcType;ClearLog: FormSW.ProcType;LoadSettings: FormSW.ProcType;SaveSettings: FormSW.ProcType;END..