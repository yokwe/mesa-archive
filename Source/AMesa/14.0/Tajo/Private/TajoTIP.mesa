L,[IfShift,MakeUpperCase,MakeLowerCase]];    Case Down => [IfShift,MakeUpperCase,MakeLowerCase];    [COM,N,{COORDS FindNextField}];    [COM,R,Replace];    [COM,S,Stuff];    [COM,T,DefineAbbreviation];    [COM,U,Undo];    [COM,V,Paste];    [COM,W,MoveDown];    W Up WHILE COMMAND Down => MoveUp;    [COM,X,DoIt];    [COM,One,{COORDS JFirst}];    [COM,Five,{COORDS JInsert}];    [COM,Nine,[IfShift,InsertParens,{COORDS JLast}]];    Comma Down => SELECT ENABLE FROM    COMMAND Down => InsertAngleBrackets;    CONTROL Down => ""«"";    ENDCASE;    [COM,Quote,[IfShift,InsertDoubleQuotes,InsertSingleQuotes]];    [COM,LeftBracket,[IfShift,InsertCurlyBrackets,InsertSquareBrackets]];    -- typing    RESERVED Down => SELECT ENABLE FROM    LeftShift Down | RightShift Down => ""\137"";    ENDCASE => ""\136"";    Eight Down WHILE [CTRL] => ""´"";    Slash Down WHILE [CTRL] => ""¸"";    Period Down WHILE [CTRL] => ""»"";    ENDCASE...", "-- Chords.TIP; Created by System-- Version of 16-Dec-82 18:49:31[DEF,ChordTime,(200)][DEF,Chord,(SELECT TRIGGER FROM  ~1 Down BEFORE [ChordTime] => COORDS;  ENDCASE)]  -- Top-level trigger caseSELECT TRIGGER FROM    MENU Down => COORDS;  Menu Down => COORDS;    Point Down => [Chord,Adjust];    Adjust Down => [Chord,Point];    ENDCASE...  ", "-- Mouse.TIP; created by System-- Version of 24-Feb-83 16:45:11OPTIONS  Fast;  -- Top-level trigger select  SELECT TRIGGER FROM    -- Mouse and button actions    MOUSE => SELECT ENABLE FROM    Point Down => COORDS, PointMotion;    Menu Down => COORDS, MenuMotion;    Adjust Down => COORDS, AdjustMotion;    ENDCASE;    [DEF,ButtonEvents,(    [DEF,ButtonEvent,(      [DEF,SHIFT,(LeftShift Down | RightShift Down)]      [DEF,CTRL,(CONTROL Down)]      [DEF,COM,(COMMAND Down)]      [DEF,TC,(TIME COORDS)]      ~1 ~2 => SELECT ENABLE FROM	[SHIFT] => SELECT ENABLE FROM	  [CTRL] => SELECT ENABLE FROM	    [COM] => { [TC] Command Control Shift ~1~2 };	    ENDCASE => { [TC] Control Shift ~1~2 };	  ENDCASE => SELECT ENABLE FROM	    [COM] => { [TC] Command Shift ~1~2 };	    ENDCASE => { [TC] Shift ~1~2 };	[CTRL] => SELECT ENABLE FROM	  [COM] => { [TC] Command Control ~1~2 };	  ENDCASE => { [TC] Control ~1~2 };	[COM] => { [TC] Command ~1~2 };	ENDCASE => { [TC] ~1~2 })]    [ButtonEvent,~1,Down];[ButtonEvent,~1,Up])]    [ButtonEvents,Point];  [ButtonEvents,Menu];  [ButtonEvents,Adjust];    ENTER => Enter;  EXIT => Exit;  USERABORT Down => Abort;      ENDCASE...", "-- FormSW.TIP; Created by System-- Version of 23-Nov-82 17:39:19      [DEF,ChordTime,(200)][DEF,Chord,(SELECT TRIGGER FROM  ~1 Down BEFORE [ChordTime] => { [TC] Menu };  ENDCASE => ~2)]  [DEF,CopyMove,(COPY Down | MOVE Down)]      [DEF,TC,(TIME COORDS)]      -- Top-Level trigger select      SELECT TRIGGER FROM  Menu Down => { [TC] Menu };  MENU Down => { [TC] Menu };    Point Down => [Chord,Adjust,    SELECT ENABLE FROM      CONTROL Down => { [TC] MoveInsertion };      [CopyMove] => { [TC] DoMoveCopy DoPrimary };      ENDCASE => { [TC] InsertToSel DoPrimary }];    Adjust Down => [Chord,Point,    SELECT ENABLE FROM      [CopyMove] => { [TC] DoMoveCopy ExtendPrimary };      ENDCASE => { [TC] InsertToSel ExtendPrimary }];    ENDCASE...", "-- TextSW.TIP; created by System-- Version of 25-Jan-83 15:30:21      [DEF,ChordTime,(100)][DEF,Chord,(SELECT TRIGGER FROM  ~1 Down BEFORE [ChordTime] => { [TC] Menu };  ENDCASE => ~2)]  [DEF,CopyMove,(COPY Down | MOVE Down)]      [DEF,IfShifted,(SELECT ENABLE FROM  [SHIFT] => ~1;  ENDCASE => ~2)]      [DEF,SHIFT,(LeftShift Down | RightShift Down)]      [DEF,TC,(TIME COORDS)]      -- Top-Level trigger select      SELECT TRIGGER FROM  Point Down => [Chord,Adjust,    SELECT ENABLE FROM      CONTROL Down => { [TC] MoveInsertion };      [CopyMove] => { [TC] Video DoPrimary };      ENDCASE => { [TC] Video InsertToSel DoPrimary }];    Adjust Down => [Chord,Point,    SELECT ENABLE FROM      [CopyMove] => { [TC] ExtendPrimary };      ENDCASE => { [TC] InsertToSel ExtendPrimary }];    -- Auto Indenting    Return Down => [IfShifted,CHAR,SELECT ENABLE FROM    CONTROL Down => UnIndentLineBreak;    ENDCASE => AutoIndentLineBreak];    BS Down => [IfShifted,DeletePreviousWord,SELECT ENABLE FROM    CONTROL Down => DeletePreviousCharacter;    ENDCASE => BackSpaceTAB];      ENDCASE...", "-- TTY.TIP; Created by System-- Version of 13-Feb-85 11:54:59SELECT TRIGGER FROM      BS Down => SELECT ENABLE FROM    LeftShift Down | RightShift Down => ""\027"";    ENDCASE => ""\010"";      DELETE Down => ""\177"";    TAB Down => SELECT ENABLE FROM    LeftShift Down | RightShift Down => ""\033"";    ENDCASE => CHAR;    COMPLETE Down => ""\033"";      Return Down => CHAR;      ENDCASE..."];  END..  -- of TajoTIP    