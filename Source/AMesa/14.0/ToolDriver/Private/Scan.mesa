-- File: Scan.mesa  -- String scanning routines  -- Last Edited by:    -- Mark on: Mar 19, 1980 12:24 PM    -- Mike on: 30-Dec-81 11:22:18     DIRECTORY    String: FROM "String" USING [SubString];  Scan: DEFINITIONS =  BEGIN  -- TYPEs    CharFilterProcType: TYPE = PROCEDURE [char: CHARACTER] RETURNS [BOOLEAN];  -- PROCEDUREs  NilTest: CharFilterProcType;  WhiteSpace: CharFilterProcType;  NotWhiteSpace: CharFilterProcType;    BaseScan: PROCEDURE [    prefix, suffix: String.SubString,     isABreak, trimIt: CharFilterProcType]    RETURNS [breakChar: CHARACTER, found: BOOLEAN];  BaseTrim: PUBLIC PROCEDURE [    ss: String.SubString, trimIt: CharFilterProcType];  Find: PROCEDURE [    prefix, suffix: String.SubString,    isABreak: CharFilterProcType]    RETURNS [breakChar: CHARACTER, found: BOOLEAN];  Scan: PROCEDURE [    prefix, suffix: String.SubString,     isABreak, trimIt: CharFilterProcType]    RETURNS [breakChar: CHARACTER, found: BOOLEAN];  Trim: PUBLIC PROCEDURE [    ss: String.SubString, trimIt: CharFilterProcType];    -- Main Line codeEND. -- of Scan.mesa        