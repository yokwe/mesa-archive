-- File: StringExtra.mesa - last edited:  -- Mark on: Nov 7, 1980 2:46 PM  -- Mike on:  6-Jan-82 11:34:25  DIRECTORY  Scan USING [CharFilterProcType],  Stream USING [Handle],  String USING [SubString];  StringExtra: DEFINITIONS =  BEGIN OPEN Scan;  -- TYPEs and constants-- BCPL utilities  BcplToHeapString: PROCEDURE [LONG POINTER] RETURNS [LONG STRING];  GetUserName: PROCEDURE RETURNS [LONG STRING];  GetUserPassword: PROCEDURE RETURNS [LONG STRING];  -- Procedures managing SubStrings  BackupSS: PROCEDURE [ss: String.SubString] = INLINE    BEGIN    IF ss.offset # 0 THEN      BEGIN      ss.offset _ ss.offset - 1;      ss.length _ ss.length + 1;      END;    END;      CharFromSS: PROCEDURE [ss: String.SubString, caseFold: BOOLEAN _ TRUE]    RETURNS [CHARACTER];  DecimalFromSS: PROCEDURE [String.SubString, INTEGER] RETURNS [INTEGER];  NextFilteredStringInSS: PROCEDURE [    ss: String.SubString, filter: CharFilterProcType]    RETURNS [LONG STRING];  NumberFromSS: PROCEDURE [String.SubString, CARDINAL] RETURNS [UNSPECIFIED];  TokenFromSS: PROCEDURE [String.SubString, LONG STRING, LONG STRING];    FilteredStringFromSS: PROCEDURE [    ss, result: String.SubString, filter: CharFilterProcType];  SkipToFilteredStringInSS: PROCEDURE [String.SubString, CharFilterProcType];    StringFromSubString: PROCEDURE [String.SubString] RETURNS [LONG STRING];  -- Procedures managing Stream  GetTokenFromStream: PROCEDURE [Stream.Handle, LONG STRING, LONG STRING];  -- Random utilities  DigitToDecimal: PROCEDURE [c: CHARACTER] RETURNS [INTEGER] = INLINE    BEGIN RETURN [c-'0]; END;      IsItADigit: CharFilterProcType;  IsItAFileNameChar: CharFilterProcType;  IsItANumeric: CharFilterProcType;    StringsAreSame: PROCEDURE [s1, s2: LONG STRING, caseFold: BOOLEAN]    RETURNS [BOOLEAN];    END... of StringExtra.mesa