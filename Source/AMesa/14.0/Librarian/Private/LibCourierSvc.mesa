plyVerifier: Auth.Verifier];  MakeAtomArguments: TYPE = RECORD [    session: Session,    verifier: Auth.Verifier,    tag: LONG STRING];  MakeAtomResults: TYPE = RECORD [    atom: XLibrarian.Atom,    replyVerifier: Auth.Verifier];  GetPrintNameArguments: TYPE = RECORD [    session: Session,    verifier: Auth.Verifier,    tag: XLibrarian.Atom];  GetPrintNameResults: TYPE = RECORD [    s: LONG STRING,    replyVerifier: Auth.Verifier];  QueryArguments: TYPE = RECORD [    session: Session,    verifier: Auth.Verifier,    libject: XString.Reader,    atoms: XLibrarian.Atoms];  QueryResults: TYPE = RECORD [    plist: LibOps.Properties,    isCheckedOut: BOOLEAN,    replyVerifier: Auth.Verifier];  SetPropertiesArguments: TYPE = RECORD [    session: Session,    verifier: Auth.Verifier,    libject: XString.Reader,    plist: LibOps.Properties];-- Courier Description Procedures  -- basic data types    DescribeProperty: Courier.Description;  DescribeProperties: Courier.Description;  -- for the procedure records  DescribeSimpleArguments: Courier.Description;  DescribeOpenArguments: Courier.Description;  DescribeOpenResults: Courier.Description;  DescribeCloseArguments: Courier.Description;  DescribeNextLibjectArguments: Courier.Description;  DescribeNextLibjectResults: Courier.Description;  DescribeMakeAtomArguments: Courier.Description;  DescribeMakeAtomResults: Courier.Description;  DescribeGetPrintNameArguments: Courier.Description;  DescribeGetPrintNameResults: Courier.Description;  DescribeQueryArguments: Courier.Description;  DescribeQueryResults: Courier.Description;  DescribeSetPropertiesArguments: Courier.Description;    END.  -- of LibCourierSvc 