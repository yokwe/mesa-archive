itPound, InitRParen, InsertChar, InsertModeOff, InsertModeOn, InterlaceOff, InterlaceOn, InvokeTests, JumpLastLine, KeyPadApplication, KeyPadNormal, LEDOptions, LineFeed, NextLine, NullState, OpenModeOff, OpenModeOn, PadCharacter, Reset, ResetMode, RestoreCursor, ReverseIndex, ReverseLineFeed, ReverseVideo, SaveCursor, ScrollForward, ScrollingRegion, ScrollOff, ScrollOn, ScrollReverse, Set132Column, Set80Column, SetAbsoluteOrigin, SetJumpScroll, SetLineFeed, SetMode, SetNewLine, SetNormalScreen, SetRelativeOrigin, SetReverseScreen, SetSmoothScroll, SetTab, SingleWidth, StandOutModeOff, StandOutModeOn, StatusReport, StuffChar, SubXDiff, SubYDiff, Tab, UnderscoreOff, UnderscoreOn, VisibleBell, VT52On, WrapOff, WrapOn, ZZZZZZZ};  BooleanTable: TYPE = PACKED ARRAY BooleanParameters OF BOOLEAN ¬ ALL[FALSE];  NumericTable: TYPE = ARRAY NumericParameters OF INTEGER ¬ ALL[0];  KeyBoardTable: TYPE = ARRAY KeyboardValues OF LONG STRING ¬ ALL[NIL];   KeyPtrTable: TYPE = ARRAY KeyboardValues OF StringPtr ¬     ALL[StringPtr[0,0]];   StateTable: TYPE =  ARRAY [0..0) OF State;     KeyBoardHandle: TYPE = LONG POINTER TO KeyBoardTable;    StringPtr: TYPE = RECORD [    start,length: CARDINAL];    State: TYPE = RECORD[    char: CHARACTER ¬ '\000,    nextState: CARDINAL ¬ 0,    eatChars: BOOLEAN ¬ FALSE,    action: Actions ¬ NullState];      StringHeap: TYPE = PACKED ARRAY CARDINAL OF CHARACTER;  StringHeapHandle: TYPE = LONG POINTER TO StringHeap;  version: LONG CARDINAL = 19850728;  -- July 28, 1985    HeaderType: TYPE = RECORD[    version: LONG CARDINAL ¬ 0,    numberOfStates: CARDINAL ¬ 0,    lengthOfKeyStrings: CARDINAL ¬ 0];      StateSize: CARDINAL = SIZE[State];  Handle: TYPE = LONG POINTER TO StateInfo;  StateInfo: TYPE = RECORD[    head: HeaderType,    bool: BooleanTable,    num: NumericTable,    key: KeyPtrTable,    state: StateTable];      CommandHandle: TYPE = LONG POINTER TO CommandStrings;  CommandStrings: TYPE = ARRAY Actions OF LONG STRING;  SortHandle: TYPE = LONG POINTER TO SortedObject;  SortedObject: TYPE = RECORD[    table: SEQUENCE length: CARDINAL OF TempStateObject];      TempStateHandle: TYPE = LONG POINTER TO TempStateObject;  TempStateObject: TYPE =  RECORD[    i: Actions ¬ NullState,    end, last: CARDINAL ¬ nullValue,    consumed: BOOLEAN ¬ FALSE];          }.  