agesArgs: PUBLIC Courier.Description =    BEGIN    [] ¬ notes.noteSize[SIZE[RFileOps.SetMinimumFileDataPagesArgs]];    END;    DescribeErrorArgs: PUBLIC Courier.Description =    BEGIN    [] ¬ notes.noteSize[SIZE[RFileOps.ErrorArgs]];    END;    END...