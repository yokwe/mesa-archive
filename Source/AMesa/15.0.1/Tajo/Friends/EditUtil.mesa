Handle];  FindReplaceInTSW: PROC[sw: Window.Handle, td: DataHandle];  ReplaceInFSW: PROC[sw: Window.Handle, td: DataHandle];  ReplaceInTSW: PROC[sw: Window.Handle, td: DataHandle];  ReplaceAllInFSW: PROC[sw: Window.Handle, td: DataHandle];  ReplaceAllInTSW: PROC[sw: Window.Handle, td: DataHandle];  Update: PROC[sw: Window.Handle, first,last: TextSource.Position,    delta: LONG INTEGER];  ToggleForm: PROC[sw: Window.Handle];   FixSelection: PROCEDURE [    source: TextSource.Handle, select: TextDisplay.Selection,     pos: TextSource.Position, delta: LONG INTEGER];  FindQuiescentTool: PROC RETURNS [BOOLEAN];    EditUtilImplA: PROGRAM;  EditUtilImplB: PROGRAM;  }.