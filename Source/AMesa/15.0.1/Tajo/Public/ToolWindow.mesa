e: PROCEDURE [window: Handle] RETURNS [type: WindowType];  Destroy: PROCEDURE [window: Handle];  MakeSize: PROCEDURE [window: Handle, size: Size];    SetAdjustProc: PROCEDURE [window: Handle, proc: AdjustProcType]    RETURNS [old: AdjustProcType];  SetBox: PROCEDURE [window: Handle, box: Box];  SetGravity: PROCEDURE [window: Handle, gravity: Window.Gravity];  SetLimitProc: PROCEDURE [window: Handle, proc: LimitProcType]    RETURNS [old: LimitProcType];  SetName: PROCEDURE [window: Handle, name: LONG STRING];  SetNameStripe: PROCEDURE [window: Handle, onOff: OnOff];  SetTinyName: PROCEDURE [    window: Handle, name: LONG STRING, name2: LONG STRING ¬ NIL,     implicitSpace: BOOLEAN ¬ TRUE];  SetTinyPlace: PROCEDURE [window: Handle, place: Place];  SetTransitionProc: PROCEDURE [window: Handle, proc: TransitionProcType]    RETURNS [TransitionProcType];    GetAdjustProc: PROCEDURE [window: Handle] RETURNS [AdjustProcType];  GetBox: PROCEDURE [window: Handle] RETURNS [Box];  GetClippedDims: PROCEDURE [window: Handle] RETURNS [Window.Dims];  GetGravity: PROCEDURE [window: Handle] RETURNS [ gravity: Window.Gravity];  GetInactiveName: PROCEDURE [window: Handle] RETURNS [name: LONG STRING];  GetLimitProc: PROCEDURE [window: Handle] RETURNS [LimitProcType];  GetName: PROCEDURE [window: Handle] RETURNS [name: LONG STRING];  GetNameStripe: PROCEDURE [window: Handle] RETURNS [OnOff];  GetState: PROCEDURE [window: Handle] RETURNS [state: State];  GetTinyName: PROCEDURE [window: Handle] RETURNS [name, name2: LONG STRING];  GetTinyPlace: PROCEDURE [window: Handle] RETURNS [place: Place];  GetTransitionProc: PROCEDURE [window: Handle] RETURNS [TransitionProcType];    SetBoxAllocator: PROCEDURE [normal, tiny: BoxProcType];  Show: PROCEDURE [window: Handle];  Hide: PROCEDURE [window: Handle];  Activate: PROCEDURE [window: Handle];  Deactivate: PROCEDURE [window: Handle] RETURNS [aborted: BOOLEAN];  EnumerateInactiveWindows: PROCEDURE [proc: EnumerateProcType];  -- Content procedures  DrawRectangle: PROCEDURE [window: Handle, box: Box, width: CARDINAL ¬ 1];  DrawNameFrame: DisplayProcType;  -- Box checking routines  IsPlaceInWindow: PROCEDURE [place: Place, window: Handle] RETURNS [BOOLEAN];  END.