onversion: ConvertProcType,    clear: ClearTrashBinProcType];  ConvertTrashBin: PROCEDURE [Target] RETURNS [LONG POINTER];  SetInsertion: PROCEDURE [    pointer: LONG POINTER, conversion: ConvertProcType,    clear: ClearTrashBinProcType];  ConvertInsertion: PROCEDURE [Target] RETURNS [LONG POINTER];  END.