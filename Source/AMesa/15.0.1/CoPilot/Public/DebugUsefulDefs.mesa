 GFHandle];  Frame: PROC [name: LONG STRING] RETURNS [GFHandle];  Started: PROC [GFHandle] RETURNS [BOOLEAN];  Valid: PROC [GFHandle] RETURNS [BOOLEAN];  Copied: PROC [GFHandle] RETURNS [BOOLEAN];  Original: PROC [new: GFHandle] RETURNS [old: GFHandle];    -- Client variables  Handle: TYPE = LONG POINTER TO Object;  Object: TYPE;  Bits: TYPE = [0..Environment.bitsPerWord);  GetAddress: PROC [Handle]     RETURNS [base: LONG POINTER, offset: Bits, there: BOOLEAN];  GetSize: PROC [Handle] RETURNS [words: CARDINAL, bits: Bits];  ReadValue: PROC [Handle];		-- noop if previously read  -- Printers  Printer: TYPE = PROC [Handle] RETURNS [BOOLEAN];	-- TRUE iff printed  AddPrinter: PROC [type: LONG STRING, proc: Printer];  RemovePrinter: PROC [type: LONG STRING, proc: Printer];  -- Interpreter  Interpreter: PROC [exp: LONG STRING, results: PROC [Handle]];   StringExpToNum: PROC [exp: LONG STRING, radix: CARDINAL] RETURNS [UNSPECIFIED];  StringExpToLNum: PROC [exp: LONG STRING, radix: CARDINAL] RETURNS [LONG UNSPECIFIED];  StringExpToOctal: PROC [LONG STRING] RETURNS [CARDINAL];  StringExpToLOctal: PROC [LONG STRING] RETURNS [LONG CARDINAL];  StringExpToDecimal: PROC [LONG STRING] RETURNS [INTEGER];  StringExpToLDecimal: PROC [LONG STRING] RETURNS [LONG INTEGER];    -- Windows  window: READONLY Window.Handle;  fileSW: READONLY Window.Handle;  Text: Format.StringProc;	-- outputs to fileSW    -- Signals    MultipleFrames: ERROR [list: FrameDesc];  InvalidAddress: ERROR [address: LONG POINTER];  InvalidFrame: ERROR [f: POINTER];  InvalidNumber: ERROR [p: LONG POINTER];  NotFound: ERROR [s: LONG STRING];  WriteProtected: ERROR [page: Environment.PageNumber];  UserAborted: SIGNAL;    END.