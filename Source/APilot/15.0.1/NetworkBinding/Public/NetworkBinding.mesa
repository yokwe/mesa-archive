URNS [responder: System.NetworkAddress, response: LONG POINTER];  --REPORTS ERROR NoBinding, DataTooLarge;    BindToFirstOnNet: PROCEDURE[    predicate: PredicateRecord ¬ nullPredicate,    responseDescription: Courier.Description ¬ NIL,    net: System.NetworkNumber ¬ System.nullNetworkNumber,    zone: UNCOUNTED ZONE ¬ NIL]    RETURNS [responder: System.NetworkAddress, response: LONG POINTER];  --REPORTS ERROR NoBinding, DataTooLarge;  VerifyBinding: PROCEDURE [    predicate: PredicateRecord ¬ nullPredicate,    responseDescription: Courier.Description ¬ NIL,    host: System.NetworkAddress,    zone: UNCOUNTED ZONE ¬ NIL]    RETURNS[response: LONG POINTER];  --REPORTS ERROR NoBinding, DataTooLarge;    -- SERVER STUB USAGE    PredicateProcedure: TYPE = PROCEDURE [    pred: Predicate, args: LONG POINTER, response: ResponseProc];  --REPORTS ERROR NoBinding;  ResponseProc: TYPE = PROCEDURE [response: ResponseRecord ¬ nullResponse];  --REPORTS ERROR DataTooLarge;    RegisterPredicate: PROCEDURE [    programNumber: LONG CARDINAL, versionRange: Courier.VersionRange,    conjunct: Conjunct, proc: PredicateProcedure,    predicateDescription: Courier.Description,    zone: UNCOUNTED ZONE ¬ NIL];    DeregisterPredicate: PROCEDURE [    programNumber: LONG CARDINAL, versionRange: Courier.VersionRange,    conjunct: Conjunct];    END...