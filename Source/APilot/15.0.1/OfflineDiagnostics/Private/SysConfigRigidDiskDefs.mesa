ngZone: RigidDiskHeadLandingZoneType,		  type: Device.Type,		  rpm: NATURAL,		  vcmDisk: BOOLEAN ];		rigidDiskArray: ARRAY [0..arraySize) OF LONG POINTER TO RigidDiskType;	newRigidDiskType: RigidDiskType;	diskShapeImage: SelfDescribingDisks.DiskShape;	GetRigidDiskTypeString: PROCEDURE [type: RigidDiskTypeBits]	RETURNS [LONG STRING];	SysConfigRigidDiskDefsImpl: PROGRAM;	END.