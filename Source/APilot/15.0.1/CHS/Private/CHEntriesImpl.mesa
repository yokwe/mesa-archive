DLOOP;    END;    DescribeIBM3270Device: Courier.Description =    BEGIN OPEN CHEntries;    device: LONG POINTER TO IBM3270Device ¬      notes.noteSize[SIZE[IBM3270Device]];    notes.noteDisjointData[@device.accessControl, NSName.DescribeNameRecord];    END;    DescribeIBM3270HostBack: PUBLIC Courier.Description =    BEGIN OPEN CHEntries;    back: LONG POINTER TO IBM3270HostBack ¬      notes.noteSize[SIZE[IBM3270HostBack]];    notes.noteDisjointData[@back.path, NSName.DescribeNameRecord];    END;          -- Siemens 9750 entries      DescribeSiemens9750HostData: PUBLIC Courier.Description =    BEGIN OPEN CHEntries;    hostData: LONG POINTER TO Siemens9750HostData ¬       notes.noteSize[SIZE[Siemens9750HostData]];    notes.noteArrayDescriptor[@hostData.controllers, SIZE[Siemens9750Controller],       32];    FOR i: CARDINAL IN [0..LENGTH[hostData.controllers]) DO      notes.noteParameters[@hostData.controllers[i],	 DescribeSiemens9750Controller];      ENDLOOP;    END;    DescribeSiemens9750Controller: Courier.Description =    BEGIN OPEN CHEntries;    controller: LONG POINTER TO Siemens9750Controller ¬      notes.noteSize[SIZE[Siemens9750Controller]];    notes.noteArrayDescriptor[@controller.terminalModelType,       SIZE[SiemensTerminalType], 32];    END;        -- RS232C port entries      DescribeRS232CData: PUBLIC Courier.Description =    BEGIN OPEN CHEntries;    rs232c: LONG POINTER TO RS232CData ¬ notes.noteSize[SIZE[RS232CData]];    notes.noteDisjointData[@rs232c.accessControl, NSName.DescribeNameRecord];    notes.noteArrayDescriptor[@rs232c.validLineSpeeds,      SIZE[RS232CEnvironment.LineSpeed], 32];    END;    DescribeRS232CBack: PUBLIC Courier.Description =    BEGIN OPEN CHEntries;    back: LONG POINTER TO RS232CBack ¬ notes.noteSize[SIZE[RS232CBack]];    notes.noteParameters[@back.owningCIU, NSString.DescribeString];    notes.noteParameters[@back.owningECS, NSString.DescribeString];    notes.noteParameters[@back.owningClient, NSString.DescribeString];    END;      DescribeUserData: PUBLIC Courier.Description =    BEGIN    user: LONG POINTER TO CHEntries.UserData =       notes.noteSize[SIZE[CHEntries.UserData]];    --notes.noteCardinal[@user.lastNameIndex];    notes.noteDisjointData[@user.fileService, NSName.DescribeNameRecord];    END;      -- generic property description routines  DescribeAddressList: PUBLIC Courier.Description =    BEGIN    address: LONG POINTER TO CHEntries.AddressList ¬      notes.noteSize[SIZE[CHEntries.AddressList]];    notes.noteArrayDescriptor[address, SIZE[System.NetworkAddress],      CHProtocol.maxAddresses];    END;      END..  LOGcreated by read,  1-Nov-83 16:55:00modified by brd, 16-Jan-84 17:46:08, description procs for IBM3270, Siemens9750, RS232C      