--VerifyRead.mesa--Last edited  22-Apr-87 20:41:40 by RKDIRECTORYFloppyDiskFace	USING [Status],OnlineDiagnosticsExtraExtras USING [LookForAbortProc];VerifyRead: DEFINITIONS =   BEGIN  maxErrors: CARDINAL = 2;  maxTries: CARDINAL = 5;  maxBadSectors: CARDINAL = 256;  VRResultType: TYPE = {success, tooManySoftError, hardReadError, hardwareError};  EntryDispType: TYPE = {soft, hard, hardware, verify};  VRError: ERROR [error: VRErrorType];  VRErrorType: TYPE = {allocBug, deAllocBug, abort};  EntryType: TYPE = RECORD   	[sector: LONG CARDINAL,	 tries:	CARDINAL,	 error:	ARRAY [1..maxTries] OF FloppyDiskFace.Status,	 entryDisp: EntryDispType];  ErrorLog: TYPE = RECORD   	[count: CARDINAL,	 entry: ARRAY [1..maxErrors] OF EntryType];  BadSectorTable: TYPE = RECORD   	[count: CARDINAL,	 entry: ARRAY [1..maxBadSectors] OF LONG CARDINAL];  VerifyReadOperation: PROCEDURE [  	errorLogPtr: LONG POINTER TO ErrorLog,	badSectorTablePtr: LONG POINTER TO BadSectorTable,	lookForAbort: OnlineDiagnosticsExtraExtras.LookForAbortProc]    RETURNS [vrResult: VRResultType];  END...  